
@model List<Feature>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="Feature" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>  
                <th scope="col">Icon</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    
                    <td>@item.Subtitle</td>
                    <td>@item.Icon</td>
                    <td>@item.IsDeleted</td>
                    
                    
                    <td>
                        <a asp-action="Edit" asp-controller="Feature" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Feature" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


